<%- include('common/head.ejs') %>

<title>Edit Page</title>

<style>
  /* General Styling */
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f6f9;
  }

  .container-fluid {
    padding: 0 20px;
  }

  .sidebaare {
    background-color: #e0f7fa;
    min-height: 100vh;
    padding: 20px;
    box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
  }

  .dashboard-content-area {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 2.2rem;
    color: #212529;
    text-align: center;
    margin-bottom: 30px;
  }

  .form-label {
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .form-control {
    border-radius: 5px;
    border: 1px solid #ddd;
    padding: 10px;
  }

  .btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

</head>
<body>

<%- include('common/header.ejs') %>

<div class="container-fluid bg-side-nav">
  <div class="row">
    <div class="col-lg-2 sidebaare">
      <%- include('common/sidebar.ejs') %>
    </div>

    <div class="col-lg-10">
      <div class="dashboard-content-area">
        <h1>Edit Project</h1>
        <form action="/admin/page/edit-page/<%= page._id %>" method="POST">
          <div class="form-group">
            <label for="page_Url" class="form-label">ProjectName</label>
            <input type="text" class="form-control" id="page_Url" name="page_Url" value="<%= page.pageUrl %>" required>
          </div>
          <div class="form-group">
            <label for="page_Nav_Text" class="form-label">Technology Stack</label>
            <input type="text" class="form-control" id="page_Nav_Text" name="page_Nav_Text" value="<%= page.pageNavText %>" required>
          </div>
          <div class="form-group">
            <label for="page_Title" class="form-label">User Experience (UX) Design</label>
            <input type="text" class="form-control" id="page_Title" name="page_Title" value="<%= page.pageTitle %>" required>
          </div>
          <div class="form-group">
            <label for="page_Meta_Description" class="form-label">Code Quality and Best Practices</label>
            <textarea class="form-control" id="page_Meta_Description" name="page_Meta_Description" rows="3" required><%= page.pageMetaDescription %></textarea>
          </div>
          <div class="form-group">
            <label for="page_Meta_Keyword" class="form-label">Testing and Debugging</label>
            <input type="text" class="form-control" id="page_Meta_Keyword" name="page_Meta_Keyword" value="<%= page.pageMetaKeyword %>" required>
          </div>
          <div class="form-group">
            <label for="page_Heading" class="form-label">Project Timeline and Milestones</label>
            <input type="text" class="form-control" id="page_Heading" name="page_Heading" value="<%= page.pageHeading %>" required>
          </div>
          <div class="form-group">
            <label for="Page_Details" class="form-label">Details of Project</label>
            <textarea class="form-control" id="Page_Details" name="Page_Details" rows="5" required><%= page.pageDetails %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Update Project</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('common/footer.ejs') %>
