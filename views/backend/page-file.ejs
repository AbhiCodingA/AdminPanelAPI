<%- include('common/head.ejs') %>

<title>Admin Panel - Pages</title>

<style>
  /* General Styling */
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f6f9;
  }

  .container-fluid {
    padding: 0 20px;
  }

  .sidebaare {
    background-color: #e0f7fa;
    min-height: 100vh;
    padding: 20px;
    box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
  }

  .dashboard-content-area {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 2.2rem;
    color: #212529;
    text-align: center;
    margin-bottom: 30px;
  }

  /* Table Styling */
  .table {
    width: 100%;
    border-collapse: collapse;
  }

  .table thead {
    background-color: #007bff;
    color: #ffffff;
  }

  .table th, .table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  .table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .table tbody tr:hover {
    background-color: #e9ecef;
  }

  .table th {
    font-weight: bold;
  }

  .btn-danger {
    background-color: #dc3545;
    border: none;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }

  .btn-success {
    background-color: #28a745;
    border: none;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-info {
    background-color: #17a2b8;
    border: none;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-info:hover {
    background-color: #138496;
  }

  .align-items-center.text-center {
    margin-top: 30px;
  }
</style>

</head>
<body>

<%- include('common/header.ejs') %>

<div class="container-fluid bg-side-nav">
  <div class="row">
    <div class="col-lg-2 sidebaare">
      <%- include('common/sidebar.ejs') %>
    </div>

    <div class="col-lg-10">
      <div class="dashboard-content-area">
        <h1 class="mb-4">All Projects</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ProjectName</th>
              <th>Technology Stack</th>
              <th>User Experience (UX) Design</th>
              <th>Code Quality and Best Practices</th>
              <th>Testing and Debugging</th>
              <th>Project Timeline and Milestones</th>
              <th>Details Of Project</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% y.forEach(function(item) { %> 
              <tr>
                <td><%= item.pageUrl %></td>
                <td><%= item.pageNavText %></td>
                <td><%= item.pageTitle %></td>
                <td><%= item.pageMetaDescription %></td>
                <td><%= item.pageMetaKeyword %></td>
                <td><%= item.pageHeading %></td>
                <td><%= item.pageDetails %></td>
                <td>
                  <a href="/admin/page/edit-page/<%= item._id %>" class="btn btn-info">Edit</a>
                  <form action="/admin/page/delete/<%= item._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <center><a class="btn btn-success btn-md" href="/admin/page/add-page/">Add More Project</a></center>
      </div>
    </div>
  </div>
</div>

<%- include('common/footer.ejs') %>
